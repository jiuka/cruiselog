<p id="notice"><%= notice %></p>

<h1>Listing Cruises</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Ship</th>
      <th>Start at</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cruises.each do |cruise| %>
      <tr>
        <td><%= cruise.name %></td>
        <td><%= cruise.description %></td>
        <td><%= cruise.ship %></td>
        <td><%= cruise.start_at %></td>
        <td><%= cruise.end_at %></td>
        <td><%= link_to 'Show', cruise %></td>
        <td><%= link_to 'Edit', edit_cruise_path(cruise) %></td>
        <td><%= link_to 'Destroy', cruise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

